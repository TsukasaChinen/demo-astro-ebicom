---
import CustomPicture from "./customPicture.astro";

type Props = {
  url: string;
  src: string;
  alt?: string;
  title: string;
};

const { url, src, alt = "", title } = Astro.props;
---

<article class="card">
  <a href={url} rel="prefetch">
    <CustomPicture src={src} alt={alt} />
    <h2>{title}</h2>
  </a>
</article>
